<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gamecode.gui.Game">

    <FrameLayout
        android:id="@+id/gameOver"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/difficultyText"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:textSize="@dimen/spinner_text_size"/>

        <nasjcodes.snakemobile.gamecode.gui.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:id="@+id/gameView" />

        <TableLayout
            android:id="@+id/dPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UP"
                    android:id="@+id/upButton"
                    android:layout_marginRight="@dimen/dpad_margin"
                    android:layout_marginEnd="@dimen/dpad_margin"
                    android:layout_marginLeft="@dimen/dpad_margin"
                    android:layout_marginStart="@dimen/dpad_margin" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEFT"
                    android:id="@+id/leftButton"
                    android:layout_marginRight="@dimen/dpad_margin"
                    android:layout_marginEnd="@dimen/dpad_margin"
                    android:layout_marginLeft="@dimen/dpad_margin"
                    android:layout_marginStart="@dimen/dpad_margin" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RIGHT"
                    android:id="@+id/rightButton"
                    android:layout_marginRight="@dimen/dpad_margin"
                    android:layout_marginEnd="@dimen/dpad_margin"
                    android:layout_marginLeft="@dimen/dpad_margin"
                    android:layout_marginStart="@dimen/dpad_margin" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOWN"
                    android:id="@+id/downButton"
                    android:layout_marginRight="@dimen/dpad_margin"
                    android:layout_marginEnd="@dimen/dpad_margin"
                    android:layout_marginLeft="@dimen/dpad_margin"
                    android:layout_marginStart="@dimen/dpad_margin" />

            </TableRow>

        </TableLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>